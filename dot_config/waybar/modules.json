{
    "sway/window": {
    	"max-length": 50
    },
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "tray": {
        "spacing": 5,
	"tooltip": false
    },
    "clock": {
        "timezone": "America/Argentina/Buenos_Aires",
        "format": "{:%Y-%m-%d %H:%M}",
	"tooltip": false,
    },
    "network": {
        "tooltip": true,
	"rotate": 0,
	"format": " {bandwidthDownBytes} -  {bandwidthUpBytes}",
	"format-disconnected": "󰖪",
	"tooltip-format": "{ifname}",
	"tooltip-format-disconnected": "Disconnected",
	"interval": 5,
    },
    "pulseaudio": {
        "scroll-step": 5,
        "max-volume": 150,
        "format": "vol {volume}%",
        "format-bluetooth": "vol {volume}%",
        "nospacing": 1,
        "on-click": "pavucontrol",
        "tooltip": false
    },
}
